<!doctype html>
<html>
<head>
<title>{{block 'title'}}</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<link rel="stylesheet" type="text/css" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="/bower_components/bootstrap/dist/css/bootstrap-theme.min.css">
<link rel="shortcut icon" type="image/png" href="/irf-logo.png">
<style>
.container {
	margin-top: 2em;
}
.user-panel {
	position: fixed;
	top: 0;
	right: 0;
}

.news dt {
	width: 100px;
}
.news dd {
	 margin-left: 120px;
}
.nowrap {
	white-space: nowrap;
}
.irf-link {
	width: 50px;
}
header a {
	color: inherit;
}
header {
	position: relative;
}
header .irf-link {
	color: #aaaaac;
	font-size: 65%;
	text-align: center;
	position: absolute;
	left: -70px;
}
header .irf-link span {
	white-space: nowrap;
	position: absolute;
	top: 100%;
	left: 50%;
	margin-left: -50px;
	width: 100px;
}
</style>
</head>
<body>
<div class="container">
	<header>
		<div class="irf-link"><img src="/irf-logo.png" alt="" width="50" height="50"><span>(<a href="http://www.rogaining.org">back to IRF</a>)</span></div>
		<h1><a href="/">WRC Agenda</a></h1>
	</header>
	{{#if message}}
	<p class="alert alert-error">{{message}}</p>
	{{/if}}
	{{{body}}}

	{{#if identity}}
	<div class="user-panel"><a href="/logout" title="Log out" class="btn btn-link"><span class="glyphicon glyphicon-user text-danger"></span></a></div>
	{{else}}
	<div class="user-panel"><a href="/login" title="Log in" class="btn btn-link"><span class="glyphicon glyphicon-user text-muted"></span></a></div>
	{{/if}}
</div>
{{{block 'bottom'}}}
</body>
</html>
