<h1>{{title 'Add an event'}}</h1>

<form class="form-horizontal" action="" method="post" role="form">
	<div class="form-group">
		<label class="control-label col-sm-2" for="name">Name</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" name="name" id="name" value="{{values.name}}" placeholder="XXX Rogaining Championships" required="required">
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-2" for="start">Start</label>
		<div class="col-sm-10">
			<input type="date" class="form-control" name="start" id="start" value="{{values.start}}" placeholder="2020-05-17" required="required">
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-2" for="end">End</label>
		<div class="col-sm-10">
			<input type="date" class="form-control" name="end" id="end" value="{{values.end}}" placeholder="2020-05-20" required="required">
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-2" for="location">Location</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" name="location" id="location" value="{{values.location}}" placeholder="London, UK" required="required">
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-2" for="organizer">Organizer</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" name="organizer" id="organizer" value="{{values.organizer}}" placeholder="XXX Rogaining Association" required="required">
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-2" for="level">Level</label>
		<div class="col-sm-10">
			<select class="form-control" name="level" id="level">
				{{#each levels}}
					{{#if open}}
					<optgroup label="{{label}}">
					{{/if}}
					{{#unless open}}{{#unless close}}
					<option value="{{name}}" {{#selected ../values name}} selected="selected"{{/selected}}>{{label}}</option>
					{{/unless}}{{/unless}}
					{{#if close}}
					</optgroup>
					{{/if}}
				{{/each}}
			</select>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-2" for="website">Website</label>
		<div class="col-sm-10">
			<input type="url" class="form-control" name="website" id="website" value="{{values.website}}" placeholder="http://example.org" required="required">
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-2" for="results">Results</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" name="results" id="results" value="{{values.results}}" placeholder="http://example.com/results">
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-2" for="media">Media</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" name="media" id="media" value="{{values.media}}">
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-2" for="slug">Slug</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" name="slug" id="slug" value="{{values.slug}}" placeholder="xrc2020" pattern="[a-z0-9-]+" required="required">
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<div class="checkbox">
				<label>
					<input type="checkbox" name="complete" id="complete"{{#if values.complete}} checked="checked"{{/if}}> Event is over
				</label>
			</div>
		</div>
	</div>
	<button type="submit" class="btn btn-default">Submit</button>
</form>
