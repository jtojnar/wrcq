<h1>{{title 'Upload results'}}</h1>

<form class="form-horizontal" action="" method="post" role="form" enctype="multipart/form-data">
	<div class="form-group">
		<label class="control-label col-sm-2" for="data">File input</label>
		<div class="col-sm-10">
			<input type="file" name="data" id="data" required="required">
			<p class="help-block">You can upload data in CSV format as long as you specify headers on the first line.</p>
		</div>
	</div>
	<div class="form-group">
		<p class="control-label col-sm-2">File type</p>
		<div class="col-sm-10">
			<label class="radio-inline">
				<input type="radio" name="data_type" id="data_type_csv" value="csv"{{#if values.data_type_csv}} checked="checked"{{/if}}> <abbr title="comma-separated values">CSV</abbr>
			</label>
			<label class="radio-inline">
				<input type="radio" name="data_type" id="data_type_ssv" value="ssv"{{#if values.data_type_ssv}} checked="checked"{{/if}}> <abbr title="semicolon-separated values">SSV</abbr>
			</label>
			<label class="radio-inline">
				<input type="radio" name="data_type" id="data_type_irf" value="irf"{{#if values.data_type_irf}} checked="checked"{{/if}}> IRF XML
			</label>
			<label class="radio-inline">
				<input type="radio" name="data_type" id="data_type_iof" value="iof"{{#if values.data_type_iof}} checked="checked"{{/if}}> IOF XML
			</label>
		</div>
	</div>
	<button type="submit" class="btn btn-default">Submit</button>
</form>
