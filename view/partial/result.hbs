<table class="table table-striped table-bordered table-hover">
<thead><tr><th>Overall Place</th><th>Members</th><th>Category</th><th>Score</th><th>Time</th><th>Penalty</th><!-- weird category counters --></tr></thead>
<tbody>
{{#each teams}}
<tr><td>{{index @index}}</td><td>{{#each members}}{{lastname}} {{firstname}} ({{country_code}}){{#unless @last}}, {{/unless}}{{/each}}</td><td>{{genderclass gender}}{{ageclass age}}{{#if duration}}{{duration}}{{/if}}</td><td>{{score}}</td><td>{{time}}</td><td>{{penalty}}</td></tr>
{{/each}}
</tbody>
</table>